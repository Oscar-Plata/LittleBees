<%= form_with model: @product, local: true do |form| %>
  <div>
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion %>
  </div>

  <div>
    <%= form.label :precio %>
    <%= form.number_field  :precio, step: 0.01 %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <% @product.errors.full_messages.each do |error|%>
    <div>
      <%= error %>
    </div>
  <%end%>
<% end %>
